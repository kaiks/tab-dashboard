<div class="container custom-container">
  <div class="row">
    <%= render 'to_do_items/to_do_item_list' %>
  </div>
  <div class="row buffer"></div>

  <div class="row">
    <% @lists.each_with_index do |list, i| %>
      <div class="col-md-<%= 5 + (1-i%2).to_i %> column">
        <%= render 'list_with_items', list: list %>
      </div>
      <div class="col-md-1 separator"></div>
    <% end %>
  </div>
</div>