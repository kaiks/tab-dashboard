<tr id="todo<%= to_do_item.id %>"
    class="to-do-item"
    title="<%= to_do_item.description %>"
    style="background-color: <%= urgency_color(to_do_item) %>">
  <td class="todo-content-container"><span title="<%= to_do_item.description %>" class="todo-content"><%= to_do_item.content %></span></td>
  <% unless local_assigns.fetch(:dashboard, false) %>
    <td class="done"><%= to_do_item.done %></td>
    <td class="done-at"><%= to_do_item.done_at %></td>
    <td class="removed"><%= to_do_item.removed %></td>
  <% end %>
  <td class="date d-none d-md-block min">
    <%= humanize_date(to_do_item.created_at) %>
  </td>
  <td class="mark-done action"><%= link_to 'âœ”', mark_done_to_do_item_path(to_do_item),
                  class: "btn badge badge-success badge-pill mark-read",
                  method: :put,
                  remote: true
  %></td>
  <!--td class="action"><%= link_to 'ðŸ“', edit_to_do_item_path(to_do_item)%></td -->
  <td class="action" id="qpa">
    <%= button_tag 'ðŸ“', type: 'button', class: 'btn btn-link action todo_edit small-line',
                   data: {toggle: 'modal', target: '#to_do_modal', whatever: "@getbootstrap", id: to_do_item.id} %>
  </td>
  <td class="action"><%= link_to 'âŒ', mark_removed_to_do_item_path(to_do_item),
                                 method: :put,
                                 remote: true %></td>
</tr>